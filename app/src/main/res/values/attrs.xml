<resources>

    <declare-styleable name="TabLayout">
        <attr name="tab_indicator_color" format="color"/>
        <attr name="tab_indicator_width" format="dimension"/>
        <attr name="tab_indicator_height" format="dimension"/>

        <attr name="tab_width" format="dimension"/>
        <attr name="tab_height" format="dimension"/>
        <attr name="tab_background" format="reference"/>

        <attr name="tab_icon_width" format="dimension"/>
        <attr name="tab_icon_height" format="dimension"/>

        <attr name="tab_text_color" format="color"/>
        <attr name="tab_text_size" format="dimension"/>
        <attr name="tab_text_selected_size" format="dimension"/>
        <attr name="tab_text_margin_top" format="dimension"/>
        <attr name="tab_text_margin_bottom" format="dimension"/>
        <attr name="tab_text_margin_left" format="dimension"/>
        <attr name="tab_text_margin_right" format="dimension"/>
        <attr name="tab_switcher_animator" format="boolean"/>
        <attr name="tab_switcher_text_bold" format="boolean"/>
        <attr name="tab_click_type" format="string"/>
        <attr name="tab_gravity">
            <enum name="center" value="0"/>
            <enum name="bottom" value="1"/>
            <enum name="top" value="2"/>
        </attr>

        <attr name="mode">
            <enum name="scrollable" value="0"/>
            <enum name="fixed" value="1"/>
        </attr>
    </declare-styleable>


</resources>
